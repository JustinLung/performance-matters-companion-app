<%- include('partials/header.ejs') %>
  <main>
    <!-- Banner Section -->
    <section class="banner">
      <article class="banner-inner">

        <!-- Banner titles -->
        <h1>Het nieuwe MijnHVA</h1>
        <h2>Een totaal nieuwe online ervaring</h2>

        <!-- Banner buttons -->
        <div class="banner-btns">
          <a href="#">Aanmelden</a>
          <a href="#information">Lees meer</a>
        </div>
      </article>
    </section>

    <!-- Information tabs -->
    <section id="information" class="information-tabs">

      <!-- Information tabs items -->
      <ul class="tabs">
        <% sections.forEach(function(tab, index){ %>
          <li class="<%= index === 0 ? 'active' : '' %>">
            <h3>
              <%= tab.title %>
            </h3>
          </li>
          <% }) %>
      </ul>

      <!-- Information tabs content -->
      <div class="tab-content">
        <% sections.forEach(function(item, index){ %>
          <article class="tab-panel <%= index === 0 ? 'active' : '' %>">
            <h3>
              <%=item.title %>
            </h3>
            <span class="seperator"></span>
            <p>
              <%= item.body %>
            </p>
          </article>
          <% }) %>
            <video src="assets/MijnHvA-demo.mp4" controls  crossorigin="anonymous"></video>
      </div>
    </section>

    <!-- Instructions Section -->
    <section id="instructions" class="instructions">

      <!-- Instructions Title -->
      <h3>Praktische Tips</h3>

      <!-- Seperator line -->
      <span class="seperator"></span>

      <!-- Seperator line -->
      <span class="seperator"></span>

      <!-- Instructions -->
      <div class="instructions-slider">
        <% tips.forEach(function(tip){ %>
          <article>
            <img src="assets/instructions/instruction1.jpg" alt="Foto van aftekenlijst en laptop" />
            <div class="instruction-content">
              <h4>
                <%= tip.title %>
              </h4>
              <hr />
              <p>
                <%= tip.body.substring(0,150) %>...
              </p>
              <a href="detail.html?id=<%= tip.tip_id %>">Meer lezen</a>
            </div>
          </article>
          <% }) %>
      </div>
    </section>

    <!-- FAQ Section -->
    <section id="faq" class="faq">
      <article>
        <h3>Veelgestelde vragen</h3>
        <span class="seperator"></span>
        <section class="faq-section">
          <% categories.forEach(function(category) { %>
            <div class="faq-questions">
              <h3>
                <%= category[1][0].title%>
              </h3>
              <% questions.forEach(function(faq){ %>
                <details>
                  <summary class="faq-question">
                    <%= faq.question %>
                      <figure class="summary-chevron">
                        <img src="../assets/chevron-right.svg" alt="Dropdown Arrow"></img>
                      </figure>
                  </summary>
                  <p>
                    <%= faq.answer %>
                  </p>
                </details>
                <% }) %>
            </div>
            <% }) %>
        </section>
      </article>
    </section>
  </main>

  <%- include('partials/footer.ejs') %>